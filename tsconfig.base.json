{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@client/*": ["client/src/*"],
      "@server/*": ["server/src/*"],
      "@shared/*": ["shared/src/*"]
    }
  }
}
